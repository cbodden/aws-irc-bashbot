# Basic helpers for communication with via IRC protocol
function RECV()
{
    echo -n "${ORN}"
    # echo "< $@" >&2
    echo "[$(date +"%R")] [<<] $@" >>${LOG} 2>&1
    echo -n "${CLR}"
}

function SEND()
{
    echo -n "${BLU}"
    # echo "> $@" >&2
    echo "[$(date +"%R")] [>>] $@" >>${LOG} 2>&1
    printf "%s\r\n" "$@" >&3
    sleep .25
    echo -n "${CLR}"
}
export -f SEND
