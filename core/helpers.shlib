# Basic helpers for communication with via IRC protocol
function RECV()
{
    echo -n "${ORN}"
    # echo "< $@" >&2
    echo "< $@" >>${LOG} 2>&1
    echo -n "${CLR}"
}

function SEND()
{
    echo -n "${BLU}"
    # echo "> $@" >&2
    echo "> $@" >>${LOG} 2>&1
    printf "%s\r\n" "$@" >&3;
    echo -n "${CLR}"
}
export -f SEND
