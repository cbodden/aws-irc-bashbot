function connectors()
{
    exec 3<>/dev/tcp/${SERVER}/${PORT} \
        || { echo "Could not connect"; exit 1; }

    SEND "NICK ${NICK}"
    SEND "USER ${NICK} 0 * :${NICK}"

    if [[ ! -z ${NICKSERV_PW} ]]
    then
        sleep 20
        SEND "PRIVMSG nickserv :identify ${NICKSERV_PW}"
        SEND "JOIN ${CHAN} ${CHAN_KEY}"
    else
        SEND "JOIN ${CHAN} ${CHAN_KEY}"
    fi
}
